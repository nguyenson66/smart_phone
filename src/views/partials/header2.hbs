<div class="container px-0">
    <nav class="navbar navbar-expand-lg navbar-light">
        <a class="navbar-brand" href="/home">
            <img src="/image_home/logo_shop_1.png" height="40" alt="logo">
        </a>
        <form class="ml-4 w-80" action="/search">
            <div class="input-group">
                <input type="search" id="form-search" class="form-control border border-right-0" name="q"
                    placeholder="Search" />
                <span class="input-group-append">
                    <button type="submit" class="btn btn-outline-light border border-left-0">
                        <i class="fas fa-search"></i>
                    </button>
                </span>
            </div>
        </form>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse" id="navbarSupportedContent">
            <ul class="user-infor navbar-nav ml-auto">
                {{#if user}}
                <li class="nav-item dropdown pr-3">
                    <a class="user-infor btn nav-link dropdown-toggle" role="button" data-toggle="dropdown"
                        aria-haspopup="true" aria-expanded="false">
                        <img class="user-infor-img" src="/images/000ccceb241fa4897a4f1d7a4db601fb.png" alt="">
                        <div class="user-infor-name text-white" style="font-size: 17px;">{{user}}</div>
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown" style="border-radius: 10px;">
                        <a class="dropdown-item" href="/order"
                            style="font-size: 15px; color: black; text-align: center;">Đơn hàng</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="/history-order"
                            style="font-size: 15px; color: black; text-align: center;">Lịch sử
                            mua hàng</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="/profile"
                            style="font-size: 15px; color: black; text-align: center;">Hồ sơ cá
                            nhân</a>
                        <div class="dropdown-divider"></div>
                        <form action="/logout" method="post" style="text-align: center;">
                            <button type="submit" class="btn btn-link">
                                <small style="font-size: 15px; color: black; text-align: center;">Đăng xuất</small>
                            </button>
                        </form>
                    </div>
                </li>
                {{else}}
                <div class="form-inline pr-3">
                    <a href="/login" style="font-size: 15px; color: white">Đăng nhập |</a>
                    <a href="/register" style="font-size: 15px; color: white"> Đăng ký</a>
                </div>
                {{/if}}
                <li class="car-web">
                    <a href="/cart">
                        <button class="btn btn-car">
                            <i class="fas fa-shopping-cart"></i>
                            <span>Giỏ hàng</span>
                        </button>
                    </a>
                </li>
            </ul>
        </div>
    </nav>
</div>