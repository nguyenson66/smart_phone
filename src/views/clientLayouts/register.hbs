<div class="login-background">
    <div class="container-login">
        <p id="error" style="text-align: center; color: red;"></p>
        <form method="POST" action="/register">
            <div class="form-control-login">
                <input type="text" name="email" required>
                <label>Email</label>
            </div>

            <div class="form-control-login">
                <input type="text" name="phone" required>
                <label>Phone number</label>
            </div>
            <div class="form-control-login">
                <input type="password" name="password" required>
                <label>Password</label>
            </div>

            <div class="form-control-login">
                <input type="text" name="name" required>
                <label>Your Name</label>
            </div>
{{!-- 
            <div class="form-control-login">
                <input type="text" name="address">
                <label>Address</label>
            </div> --}}


            <button class="btn-login">Register</button>

            <p class="text">you already have an account? <a href="/login">Login</a> </p>
        </form>
    </div>
</div>

<script>
    const labels = document.querySelectorAll('.form-control-login label')

    labels.forEach(label => {
        label.innerHTML = label.innerText
            .split('')
            .map((letter, idx) => `<span style="transition-delay:${idx * 50}ms">${letter}</span>`)
            .join('')
    })


        ////// set error ////////

</script>