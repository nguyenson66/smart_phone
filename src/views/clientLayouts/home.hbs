                <a class="nav-link" href="/search?manufacturer=sony">SONY</a>
            </li>
        </ul>
    </nav>
</div>
<div class="close-heading-menu"></div>
<!-- main-body -->
<div class="main-body container">
    <div class="utilities row">
        <div id="main-image" class="col-lg-9 carousel slide" data-ride="carousel">

            <!-- Indicators -->
            <ul class="carousel-indicators">
                <li data-target="#main-image" data-slide-to="0" class="active"></li>
                <li data-target="#main-image" data-slide-to="1"></li>
                <li data-target="#main-image" data-slide-to="2"></li>
            </ul>

            <!-- The slideshow -->
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="/image_home/main-img-1.PNG" alt="">
                </div>
                <div class="carousel-item">
                    <img src="/image_home/main-img-2.PNG" alt="">
                </div>
                <div class="carousel-item">
                    <img src="/image_home/main-img-3.PNG" alt="">
                </div>
            </div>

            <!-- Left and right controls -->
            <a class="carousel-control-prev" href="#main-image" data-slide="prev">
                <span class="carousel-control-prev-icon"></span>
            </a>
            <a class="carousel-control-next" href="#main-image" data-slide="next">
                <span class="carousel-control-next-icon"></span>
            </a>

        </div>
        <div class="some-utilities col-lg-3 row">
            <div class="col-lg-12 col-md col-6">
                <div class="utilities-item">
                    <i class="fas fa-truck"></i>
                    <span>Gia hàng siêu nhanh</span>
                </div>
            </div>
            <div class="col-lg-12 col-md-4 col-6">
                <div class=" utilities-item ">
                    <i class="fas fa-donate "></i>
                    <span>Thanh toán COD</span>
                </div>
            </div>
            <div class="col-lg-12 col-md-4 col-6 ">
                <div class="utilities-item ">
                    <i class="fas fa-trophy "></i>
                    <span>Sản phẩm chính hãng</span>
                </div>
            </div>
            <div class="col-lg-12 col-md-4 col-6 ">
                <div class="utilities-item "><i class="fas fa-gift "></i>
                    <span>Nhiều ưu đãi hấp dẫn</span>
                </div>
            </div>
            <div class="col-lg-12 col-md-4 col-6 ">
                <div class="utilities-item ">
                    <i class="fas fa-headset "></i>
                    <span>Tư vấn miễn phí</span>
                </div>
            </div>
        </div>
    </div>
    <!-- hhhhhhhhh -->
    <div class="product-compartment row ">
        <span>Sản phẩm</span>
        <hr class="col ">
    </div>
    <div id="product-category" class="row">
        {{#each items}}
        <a href="/item/{{this.id}}">
            <div class="product-item card col-md-3 col-sm-4 col-6 btn ">
                <div class="item-img">
                    <img class="card-img-top " src="/images/{{this.image}}" alt="Card image " style="width:100% ">
                </div>
                <div class="card-body ">
                    <h5 class="card-title" style="color: black;">{{this.name}}</h5>
                    <span class="product-price">{{vnd this.price}}</span><span> đ</span> <br>
                    <a href="/item/{{this.id}}" id="statusItem" class="btn btn-block stretched-link ">
                        {{check this.quantity}}</a>
                    <h6 class="card-text" style="text-align: center;">{{this.description}}</h6>
                </div>
            </div>
        </a>
        {{/each}}
    </div>
</div>

<nav aria-label="...">
    <ul class="pagination">
        <li class="page-item"><a class="page-link" href="/home?page=1">1</a></li>
        <li class="page-item"><a class="page-link" href="/home?page=2">2</a></li>
        <li class="page-item"><a class="page-link" href="/home?page=3">3</a></li>
        <li class="page-item"><a class="page-link" href="/home?page=4">4</a></li>
    </ul>
</nav>


