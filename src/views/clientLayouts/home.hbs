<header class="container-fluid">
    <div class="heading-sub container">
        <div class="row">
            <div class="logo-web col-lg-1 col-3">
                <a href="/home">
                    <img src="/image_home/logo_shop.png" alt="logo">
                </a>
            </div>
            <div class="col-lg-5 col-6">
                <form class="input-group search-web" action="/search">
                    <div class="input-group search-web">
                        <input type="search" id="form-search" class="form-control" name="q" placeholder="Search" />
                        <button type="submit" class="btn btn-search">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </form>
            </div>
            <div class="car-web col-lg-2 col-1">
                <a href="/order">
                    <button class="btn btn-car">
                        <i class="fas fa-shopping-cart"></i>
                        <span>Giỏ hàng</span>
                    </button>
                </a>
            </div>
            <div class="user-infor col-lg-4 row">
                <div class="col-3">
                    <a href="/historyOrder" style="font-size: 15px; color: aqua;">Lịch sử mua hàng</a>
                </div>
                <div class="col-8" id="form-login-user">
                    {{#if user}}
                    <div class="form-inline">
                        <small style="font-size: 15px; color: aqua;">Hi, {{user}}</small>
                        <form method="POST" action="/logout">
                            <button type="submit" class="btn btn-link">
                                <small style="font-size: 15px; color: aqua;">Thoát</small>
                            </button>
                        </form>
                    </div>
                    {{else}}
                    <div class="form inline">
                        <a href="/login" style="font-size: 15px; color: aqua;">Đăng nhập /</a>
                        <a href="/register" style="font-size: 15px; color: aqua;"> Đăng ký</a>
                    </div>
                    {{/if}}
                </div>
                <div class="btn-menu col-2">
                    <button class="btn">
                        <i class="fas fa-bars"></i>
                        <span>Menu</span>
                    </button>
                </div>
            </div>
        </div>
</header>
<div class="container-fluid heading-menu">
    <div class="category-menu">
        <span>Danh mục</span>
    </div>
    <nav class="container navbar navbar-expand-lg">
        <ul class="navbar-nav" id="nav-menu">
            <li class="nav-item">
                <a class="nav-link" href="/search?manufacturer=iphone">IPHONE</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/search?manufacturer=samsung">SAM SUNG</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/search?manufacturer=nokia">NOKIA</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/search?manufacturer=xiaomi">XAOMI</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/search?manufacturer=oppo">OPPO</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/search?manufacturer=realme">REALME</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/search?manufacturer=sony">SONY</a>
            </li>
        </ul>
    </nav>
</div>
<div class="close-heading-menu"></div>
<!-- main-body -->
<div class="main-body container">
    <div class="utilities row">
        <div id="main-image" class="col-lg-9 carousel slide" data-ride="carousel">

            <!-- Indicators -->
            <ul class="carousel-indicators">
                <li data-target="#main-image" data-slide-to="0" class="active"></li>
                <li data-target="#main-image" data-slide-to="1"></li>
                <li data-target="#main-image" data-slide-to="2"></li>
            </ul>

            <!-- The slideshow -->
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="/image_home/main-img-1.PNG" alt="">
                </div>
                <div class="carousel-item">
                    <img src="/image_home/main-img-2.PNG" alt="">
                </div>
                <div class="carousel-item">
                    <img src="/image_home/main-img-3.PNG" alt="">
                </div>
            </div>

            <!-- Left and right controls -->
            <a class="carousel-control-prev" href="#main-image" data-slide="prev">
                <span class="carousel-control-prev-icon"></span>
            </a>
            <a class="carousel-control-next" href="#main-image" data-slide="next">
                <span class="carousel-control-next-icon"></span>
            </a>

        </div>
        <div class="some-utilities col-lg-3 row">
            <div class="col-lg-12 col-md col-6">
                <div class="utilities-item">
                    <i class="fas fa-truck"></i>
                    <span>Gia hàng siêu nhanh</span>
                </div>
            </div>
            <div class="col-lg-12 col-md-4 col-6">
                <div class=" utilities-item ">
                    <i class="fas fa-donate "></i>
                    <span>Thanh toán COD</span>
                </div>
            </div>
            <div class="col-lg-12 col-md-4 col-6 ">
                <div class="utilities-item ">
                    <i class="fas fa-trophy "></i>
                    <span>Sản phẩm chính hãng</span>
                </div>
            </div>
            <div class="col-lg-12 col-md-4 col-6 ">
                <div class="utilities-item "><i class="fas fa-gift "></i>
                    <span>Nhiều ưu đãi hấp dẫn</span>
                </div>
            </div>
            <div class="col-lg-12 col-md-4 col-6 ">
                <div class="utilities-item ">
                    <i class="fas fa-headset "></i>
                    <span>Tư vấn miễn phí</span>
                </div>
            </div>
        </div>
    </div>
    <!-- hhhhhhhhh -->
    <div class="product-compartment row ">
        <span>Sản phẩm</span>
        <hr class="col ">
        <button type="button" class="btn-filter btn">
            Lọc theo giá
        </button>
    </div>
    <div id="product-category" class="row">
        {{#each items}}
        <a href="/item/{{this.id}}">
            <div class="product-item card col-md-3 col-sm-4 col-6 btn ">
                <img class="card-img-top " src="/images/{{this.image}}" alt="Card image " style="width:100% ">
                <div class="card-body ">
                    <h5 class="card-title" style="color: black;">{{this.name}}</h5>
                    <span class="product-price">{{this.price}}</span><span> đ</span> <br>
                    <a href="/item/{{this.id}}" id="statusItem" class="btn btn-block stretched-link ">Số lượng
                        còn lại :
                        {{this.quantity}}</a>
                    <h6 class="card-text" style="text-align: center;">{{this.description}}</h6>
                </div>
            </div>
        </a>
        {{/each}}
    </div>
</div>

<nav aria-label="...">
    <ul class="pagination">
        <li class="page-item"><a class="page-link" href="/home?page=1">1</a></li>
        <li class="page-item"><a class="page-link" href="/home?page=2">2</a></li>
        <li class="page-item"><a class="page-link" href="/home?page=3">3</a></li>
        <li class="page-item"><a class="page-link" href="/home?page=4">4</a></li>
    </ul>
</nav>


<footer class="container-fluid "></footer>
