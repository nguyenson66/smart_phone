<div style="background-color: #4682B4;">
    <div class="login-background">
        <div class="container-login">
            <h1>Wellcome to Shop</h1>
            <p id="error"></p>
            <form method="POST" action="/login">
                <div class="form-control-login">
                    <input type="text" name="phone" required>
                    <label>Phone number</label>
                </div>

                <div class="form-control-login">
                    <input type="password" name="password" required>
                    <label>Password</label>
                </div>

                <button class="btn-login">Login</button>

                <p class="text">Don't have an account? <a href="/register">Register</a> </p>
            </form>
        </div>
    </div>
</div>

<script>
    const labels = document.querySelectorAll('.form-control-login label')

    labels.forEach(label => {
        label.innerHTML = label.innerText
            .split('')
            .map((letter, idx) => `<span style="transition-delay:${idx * 50}ms">${letter}</span>`)
            .join('')
    })


        ////// set error ////////

</script>