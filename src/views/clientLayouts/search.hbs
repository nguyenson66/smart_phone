<header class="container-fluid">
    <div class="heading-sub container">
        <div class="row">
            <div class="logo-web col-lg-1 col-2">
                <a href="/home">
                    <img src="/image_home/logo_shop.png" alt="logo">
                </a>
            </div>
            <div class="search-web col-lg-5 col-6">
                <form class="input-group" action="/search">
                    <div class="input-group">
                        <input type="search" id="form-search" class="form-control" name="q" placeholder="Search" />
                        <button type="submit" class="btn btn-search">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </form>
            </div>
            <div class="car-web col-lg-2 col-1">
                <a href="/order">
                    <button class="btn btn-car">
                        <i class="fas fa-shopping-cart"></i>
                        <span>Giỏ hàng</span>
                    </button>
                </a>
            </div>


            <div class="user-infor col-lg-4 row">
                <div class="col-3"></div>
                <div class="col-8" id="form-login-user">
                    {{#if user}}
                    <div class="dropdown">
                        <div class="form-inline dropbtn">
                            <div class="user-infor-sub">
                                <img src="/images/000ccceb241fa4897a4f1d7a4db601fb.png" alt="">
                            </div>
                            <small style="font-size: 17px; color: aqua;">
                                {{user}}
                            </small>
                        </div>
                        <div class="dropdown-content" style="border-radius: 10px;">
                            <a href="/admin" style="font-size: 15px; color: black; text-align: center;">Đơn hàng</a>
                            <a href="/historyOrder" style="font-size: 15px; color: black; text-align: center;">Lịch sử
                                mua hàng</a>
                            <a href="/admin/items" style="font-size: 15px; color: black; text-align: center;">Hồ sơ cá
                                nhân</a>
                            <form action="/logout" method="post" style="text-align: center;">
                                <button type="submit" class="btn btn-link">
                                    <small style="font-size: 15px; color: black; text-align: center;">Đăng xuất</small>
                                </button>
                            </form>
                        </div>
                    </div>
                    {{else}}
                    <div class="form inline">
                        <a href="/login" style="font-size: 15px; color: aqua;">Đăng nhập /</a>
                        <a href="/register" style="font-size: 15px; color: aqua;"> Đăng ký</a>
                    </div>
                    {{/if}}
                </div>
                <div class="btn-menu col-2">
                    <button class="btn">
                        <i class="fas fa-bars"></i>
                        <span>Menu</span>
                    </button>
                </div>
            </div>
        </div>
</header>


<div class="container-fluid heading-menu">
    <div class="category-menu">
        <span>Danh mục</span>
    </div>
    <nav class="container navbar navbar-expand-lg">
        <ul class="navbar-nav" id="nav-menu">
            <li class="nav-item">
                <a class="nav-link" href="/search?manufacturer=iphone">IPHONE</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/search?manufacturer=samsung">SAM SUNG</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/search?manufacturer=nokia">NOKIA</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/search?manufacturer=xiaomi">XAOMI</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/search?manufacturer=oppo">OPPO</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/search?manufacturer=realme">REALME</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/search?manufacturer=sony">SONY</a>
            </li>
        </ul>
    </nav>
</div>
<div class="close-heading-menu"></div>
<!-- main-body -->
<div class="main-body container">
    <div class="product-compartment row ">
        <span>Sản phẩm cho từ khoá '{{key_search}}' </span>
        <hr class="col ">
    </div>


    <div id="product-category" class="row">
        {{#each items}}
        <a href="/item/{{this.id}}">
            <div class="product-item card col-md-3 col-sm-4 col-6 btn ">
                <img class="card-img-top " src="/images/{{this.image}}" alt="Card image " style="width:100% ">
                <div class="card-body ">
                    <h5 class="card-title" style="color: black;">{{this.name}}</h5>
                    <span class="product-price">{{vnd this.price}}</span><span> đ</span> <br>
                    <a href="/item/{{this.id}}" id="statusItem" class="btn btn-block stretched-link ">Số lượng
                        còn lại :
                        {{this.quantity}}</a>
                    <h6 class="card-text" style="text-align: center;">{{this.description}}</h6>
                </div>
            </div>
        </a>
        {{/each}}
    </div>
</div>


<footer class="container-fluid "></footer>
